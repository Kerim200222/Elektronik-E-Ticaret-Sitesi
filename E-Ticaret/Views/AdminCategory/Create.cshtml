@model EntityLayer22.Entities.Category
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "btn btn-danger" })

                <div class="form-group">
                    <label>Ad</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" }) <!-- تم التعديل -->
                    @Html.ValidationMessageFor(x => x.Name, "", new { @style = "color:red" })

                </div>
                <br />

                <div class="form-group">
                    <label>Açıklama</label>
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" }) <!-- تم التعديل -->
                    @Html.ValidationMessageFor(x => x.Description, "", new { @style = "color:red" })
                </div>
                <br />
                <button class="btn btn-primary" type="submit">Ekle</button>

            </form>
        </div>
    </div>
</div>
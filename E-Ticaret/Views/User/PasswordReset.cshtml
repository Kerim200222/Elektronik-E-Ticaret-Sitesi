@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Şifre Sıfırla</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site-reset.css" rel="stylesheet" />
</head>
<body class="reset-bg">

    <!-- هذا الـ wrapper يكبّر العنصر ليملأ الـ viewport ويخليه في المنتصف -->
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="reset-card">
            <h3>Şifreyi Sıfırla</h3>

            @if (!string.IsNullOrEmpty(ViewBag.uyari))
            {
                <div class="alert alert-success">@ViewBag.uyari</div>
            }

            @using (Html.BeginForm("PasswordReset", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="mb-4">
                    <input type="email"
                           name="eposta"
                           placeholder="E-Mail Adresinizi Girin"
                           class="form-control"
                           required />
                </div>
                <button type="submit"
                        class="btn btn-primary w-100">
                    Şifreyi Sıfırla
                </button>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@model EntityLayer22.Entities.Product

@{
    ViewData["Title"] = "Ürün Detay";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<section class="product-details">
    <div class="container">
        <div class="row">
            <!-- الصورة -->
            <div class="col-sm-6">
                <img src="~/Content/Image/@Model.Image"
                     class="img-responsive"
                     alt="@Model.Name" />
            </div>
            <!-- التفاصيل -->
            <div class="col-sm-6">
                <h2>Ürün Adı: @Model.Name</h2>
                <h3>@String.Format("{0:N2} TL", Model.Price)</h3>
                <p><strong>Kategori:</strong> @Model.Category?.Name</p>
                <p><strong>Stok:</strong> @Model.Stock</p>
                <p><strong>Popüler:</strong> @(Model.Popular ? "Evet" : "Hayır")</p>
                <p><strong>Onay:</strong> @(Model.IsApproved ? "Evet" : "Hayır")</p>
                <p><strong>Açıklama:</strong> @Model.Description</p>
                   <a asp-controller="Cart"
                   asp-action="AddCart"
                   asp-route-id="@Model.Id"
                   class="btn btn-warning">
                    <i class="fa fa-shopping-cart"></i> Sepete Ekle
                </a>
            </div>
        </div>
    </div>


</section>

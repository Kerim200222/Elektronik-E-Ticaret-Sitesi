@model List<EntityLayer22.Entities.Product>

<section>
    <div class="container">
        <div class="row">
          <div class="col-sm-8">
            </div>
              <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center">POPÜLER ÜRÜNLER</h2>
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        <img src="~/Content/Image/@item.Image" width="60" height="150" />
                                        <h2>@item.Price ₺</h2>
                                        <p>@item.Name</p>
                                        <a href="/Product/ProductDetails/@item.Id" class="btn btn-default add-to-cart">Detay</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div><!--features_items-->

            </div>
        </div>
    </div>
</section>





